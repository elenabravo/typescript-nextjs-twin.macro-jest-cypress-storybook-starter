{
  "name": "typescript-nextjs-twin.macro-jest-cypress-storybook-starter",
  "version": "1.0.0",
  "description": "A TypeScript starter for Next.js including twin.macro for styling, jest and cypress for testing and storybook for creating amazing documentation",
  "keywords": [
    "next",
    "react",
    "tailwind css",
    "emotion",
    "twin.macro",
    "storybook",
    "react-testing-library",
    "jest",
    "cypress"
  ],
  "author": "Elena Bravo",
  "license": "ISC",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.{js,ts,tsx,json}\"",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --config .prettierrc --ignore-path .gitignore \"src/**/*.{js,ts,tsx,json}\" --write",
    "type-check": "tsc",
    "test": "jest --config=jest.config.json --rootDir=src",
    "test:coverage": "npm run test --  --coverage",
    "test:watch": "npm run test -- --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "npm run test:e2e:open",
    "test:e2e:run": "start-server-and-test prod http://localhost:8000 cy:run",
    "test:e2e:open": "start-server-and-test prod http://localhost:8000 cy:open",
    "validate": "npm run test:coverage && npm run test:e2e:run",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "dependencies": {
    "@emotion/core": "11.0.0",
    "@emotion/css": "11.9.0",
    "@emotion/react": "11.9.3",
    "@emotion/server": "11.4.0",
    "@emotion/styled": "11.9.3",
    "next": "12.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@axe-core/react": "4.4.3",
    "@babel/core": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@emotion/babel-plugin": "11.9.2",
    "@emotion/babel-preset-css-prop": "11.2.0",
    "@next/eslint-plugin-next": "12.2.0",
    "@storybook/addon-a11y": "6.5.9",
    "@storybook/addon-actions": "6.5.9",
    "@storybook/addon-docs": "6.5.9",
    "@storybook/addon-essentials": "6.5.9",
    "@storybook/addon-interactions": "6.5.9",
    "@storybook/addon-links": "6.5.9",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/builder-webpack5": "6.5.9",
    "@storybook/manager-webpack5": "6.5.9",
    "@storybook/react": "6.5.9",
    "@storybook/testing-library": "0.0.13",
    "@testing-library/cypress": "8.0.3",
    "@testing-library/dom": "8.14.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.3.0",
    "@types/node": "18.0.0",
    "@types/react": "18.0.15",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "autoprefixer": "10.4.7",
    "axe-core": "4.4.2",
    "babel-eslint": "10.1.0",
    "babel-jest": "28.1.2",
    "babel-plugin-macros": "3.1.0",
    "babel-plugin-twin": "1.0.2",
    "commitizen": "4.2.4",
    "cypress": "10.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.19.0",
    "eslint-config-next": "12.2.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-jest-dom": "4.0.2",
    "eslint-plugin-jsx-a11y": "6.6.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-testing-library": "5.5.1",
    "husky": "8.0.1",
    "jest": "28.1.2",
    "jest-environment-jsdom": "28.1.2",
    "lint-staged": "13.0.3",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-import": "14.1.0",
    "postcss-preset-env": "7.7.2",
    "prettier": "2.7.1",
    "stylelint-config-recommended": "8.0.0",
    "tailwindcss": "3.1.5",
    "twin.macro": "2.8.2",
    "typescript": "4.7.4",
    "webpack": "5.73.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
